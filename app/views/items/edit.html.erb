<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 border  mt-4 mb-4">
        <div class="text-center pb-2">
          <h2>アイテム情報を入力</h2>
        </div>
        <div class="border mb-4"></div>
        <div class="text-center pt-0 pb-o">
          <%if @item.image?%>
            <%= image_tag @item.image.url, :size => '200x250' %>
          <% else %>
            <%= image_tag "/assets/default.jpeg", :size => '200x250', :class => "border" %>
          <% end %>
        </div>
          
        <%= form_with(model: @item, local: true) do |f| %>
          <div class="form-group text-center pt-0 pb-0">
            <%= f.label :image,"画像" %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :name, 'アイテム名' %>
            <%= f.text_field :name, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :introduction, 'アイテム紹介' %>
            <%= f.text_area :introduction, class: 'form-control', rows: 5 %>
          </div>
          <%= f.submit '追加', class: 'btn btn-danger btn-block mb-4' %>
        <% end %>
        <div class="text-center pt-0">
          <%= link_to '戻る', root_path %>
        </div>
      </div>
    </div>
  </div>
</div>