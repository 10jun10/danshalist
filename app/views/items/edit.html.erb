<div class="main">
  <div class="container">
    <div class="text-center">
      <h3><span class="text-danger">D</span>ansha<span class="text-danger">L</span>ist</h3>
    </div>
    <div class="row">
      <div class="col-sm-8 offset-sm-2 border  mt-4 mb-4">
        <div class="text-center pb-2">
          <h2>アイテム情報を入力</h2>
        </div>
        <div class="border mb-4"></div>
        <!--<div class="text-center pt-0 pb-o">-->
        <!--  <#%if @item.image?%>-->
        <!--    <#= image_tag @item.image.to_s, :size => '200x250', :alt => "アイテム画像" %>-->
        <!--  <%# else %>-->
        <!--    <%#= image_tag "https://res.cloudinary.com/hqf8k8ltl/image/upload/v1592051211/m_e_others_500_dr00a1.png", :size => '200x250', :class => "border", :alt => "アイテム画像" %>-->
        <!--  <%# end %>-->
        <!--</div>-->
          
        <%= form_with(model: @item, local: true) do |f| %>
          <div class="text-center pt-0 pb-0 relative">
            <div class="img_wrap" id="image">
              <%if @item.image?%>
                <%= image_tag @item.image.to_s, :size => '200x250', :alt => "アイテム画像", :class => "border item-image" %>
                
              <% else %>
                <%= image_tag "https://res.cloudinary.com/hqf8k8ltl/image/upload/v1592051211/m_e_others_500_dr00a1.png", :size => '200x250', :class => "border item-image", :alt => "アイテム画像" %>
                
              <% end %>
              <i class="fas fa-camera" style="font-size: 60px;"></i>
            </div>
          </div>
          <%= f.file_field :image %>
          
          <%= render 'layouts/error_messages', model: f.object %>
          
          <!--画像-->
          <!--<div class="form-group text-center pt-0 pb-0">-->
          <!--  <%#= f.label :image,"画像" %>-->
          <!--  <%#= f.file_field :image %>-->
          <!--</div>-->
          
          
          
          <div class="form-group">
            <%= f.label :name, 'アイテム名' %>
            <%= f.text_field :name, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= f.label :introduction, 'アイテム紹介' %>
            <%= f.text_area :introduction, class: 'form-control', rows: 5 %>
          </div>
          <%= f.submit '追加', class: 'btn btn-danger btn-block mb-4' %>
        <% end %>
        <div class="text-center pt-0">
          <%= link_to '戻る', @item %>
        </div>
      </div>
    </div>
  </div>
</div>