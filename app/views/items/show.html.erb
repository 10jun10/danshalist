<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 border mt-4 mb-4">
        <div class="text-center">
          <h2><%= @item.name %></h2>
        </div>
        
        <div class="text-center pt-0 ">
          <%if @item.image?%>
            <%= image_tag @item.image.to_s, :size => '200x250' %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/hqf8k8ltl/image/upload/v1592051211/m_e_others_500_dr00a1.png", :size => '200x250', :class => "border" %>
          <% end %>
        </div>
        
        <div class="pt-0 pb-0">
          <table border="１" class="mx-auto">
            <tr>
              <td bgcolor="#EEEEEE" style="width: 120px;">ユーザー名</td>
              <td><%= link_to @item.user.name, @item.user %></td>
            </tr>
            <tr>
              <td bgcolor="#EEEEEE" style="width: 120px;">アイテムの説明</td>
              <td><%= @item.introduction%></td>
            </tr>
          </table>
        </div>
        <% if current_user == @item.user %>
          <%= link_to '編集', edit_item_path(@item), class: 'btn btn-danger btn-block mt-4 mb-4' %>
        <% end %>
        <% if current_user == @item.user %>
          <%= link_to 'このアイテムを削除する', @item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class:"btn btn-secondary btn-block mb-4" %>
        <% end %>
        <div class="text-center">
          <%= link_to '戻る', root_path%>
        </div>
        
        
      </div>
    </div>
  </div>
</div>