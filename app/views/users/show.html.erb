<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 border mt-4 mb-4">
        <div class="text-center pb-0">
          <% if @user.image? %>
            <%= image_tag @user.image.url, :size => '200x200', :class => 'rounded-circle' %>
          <% else %>
            <%= image_tag "/assets/default.jpeg", :size => '200x200', :class => 'rounded-circle' %>
          <% end %>
        </div>
        <div class="text-center">
          <%= @user.name %><%= link_to '(編集)', edit_user_path(@user) %>
        </div>
        <div class="card">
          <p class="mb-0 text-center pt-0 pb-0">自己紹介</p>
          <div class="card-body">
            <%= @user.introduction %>
          </div>
        </div>
        
        アイテム数
      </div>
    </div>
  </div>
</div>