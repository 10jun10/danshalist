<div class="main">
  <div class="container">
    <div class="text-center">
      <h3><span class="text-danger">D</span>ansha<span class="text-danger">L</span>ist</h3>
    </div>
    <div class="row">
      <div class="col-sm-8 offset-sm-2 border  mt-4 mb-4">
        <div class="text-center">
          <h3>ログイン</h3>
        </div>
        <div class="row mb-4">
          <div class="col-sm-6 offset-sm-3">
            <p class="text-center pt-0 pb-0">アカウントをお持ちで無い方はこちら</p>
            <%= link_to '会員登録', signup_path, class: 'btn btn-primary btn-block mb-4' %>
            <div class="border mb-4"></div>
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
              <div class="form-group">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, class: 'form-control' %>
               </div>
              <div class="text-right">
                <%= f.submit '   ログイン   ', class: 'btn btn-danger' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>